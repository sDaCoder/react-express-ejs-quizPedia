<div id="accordion-open" data-accordion="collapse" class="w-[80vw] rounded-lg">
    <h1 class="font-bold font-mono text-2xl self-start my-8">Your responses</h1>
    <% for(let i = 0; i < questions.length; i++) { %>
        <h2 id="accordion-open-heading-<%= i %>">
            <button type="button" class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-900 border border-b-0 border-gray-200  focus:ring-4 focus:ring-gray-200 bg-red-50 gap-3"
                data-accordion-target="#accordion-open-body-<%= i %>" aria-expanded="true" aria-controls="accordion-open-body-<%= i %>">
                <div class="flex flex-col md:flex-row flex-wrap items-center gap-y-2">
                    <svg class="hidden md:block w-5 h-5 me-2 shrink-0" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>
                    <p class="text-wrap text-left"><%= questions[i].question %></p>

                    <% if (answered[i] === "Unanswered") { %>
                        <p class="text-yellow-500 md:px-5 font-bold italic self-start">(You didn't answer - 0 points)</p>
                    <% } else if (answered[i] === questions[i].correct) { %>
                        <p class="text-green-500 md:px-5 font-bold italic self-start">(You are correct - 100 points)</p>
                    <% } else { %>
                        <p class="text-red-500 md:px-5 font-bold italic self-start">(You are wrong - 0 points)</p>
                    <% } %>

                </div>
                <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
                </svg>
            </button>
        </h2>
        <div id="accordion-open-body-<%= i %>" class="hidden" aria-labelledby="accordion-open-heading-<%= i %>">
            <div class="p-5 border border-b-0 border-gray-200 bg-red-200">
                <section class="mt-5 flex flex-col items-center mx-4 space-y-6 font-extrabold">
            
                    <% Object.keys(questions[i].options).forEach((key, index) => { %>

                        <% if (questions[i].options[key] === answered[i]) { %>
                            
                            <!-- CORRECTLY ANSWERED OPTION -->
                            <% if (answered[i] === questions[i].correct) { %>
                                <div class="bg-green-500 md:w-[40%] w-full h-14 rounded-lg flex items-center px-6">
                                    <p class="py-2 px-4 bg-red-50 rounded-full">
                                        <%= String.fromCharCode(65 + index) %>
                                    </p>
                                    <p for="question<%= i %>-option<%= key %>" class="text-white options px-6">
                                        <%= questions[i].options[key] %>
                                    </p>
                                </div>

                            <!-- INCORRECTLY ANSWERED OPTION -->
                            <% } else { %>
                                <div class="bg-red-500 md:w-[40%] w-full h-14 rounded-lg flex items-center px-6">
                                    <p class="py-2 px-4 bg-red-50 rounded-full">
                                        <%= String.fromCharCode(65 + index) %>
                                    </p>
                                    <p for="question<%= i %>-option<%= key %>" class="text-white options px-6">
                                        <%= questions[i].options[key] %>
                                    </p>
                                </div>
                            <% } %>

                        <% } else if (questions[i].options[key] === questions[i].correct) { %>
                            <!-- CORRECT UNANSWERED OPTION -->
                            <div class="bg-green-500 md:w-[40%] w-full h-14 rounded-lg flex items-center px-6">
                                <p class="py-2 px-4 bg-red-50 rounded-full">
                                    <%= String.fromCharCode(65 + index) %>
                                </p>
                                <p for="question<%= i %>-option<%= key %>" class="text-white options px-6">
                                    <%= questions[i].options[key] %>
                                </p>
                            </div>
                            
                            <% } else { %>
                                <!-- NORMAL UNANSWERED OPTION -->
                                <div class="bg-red-50 md:w-[40%] w-full h-14 rounded-lg flex items-center px-6">
                                    <p class="py-2 px-4 bg-red-100 rounded-full">
                                        <%= String.fromCharCode(65 + index) %>
                                    </p>
                                    <p for="question<%= i %>-option<%= key %>" class="options px-6">
                                        <%= questions[i].options[key] %>
                                    </p>
                                </div>

                        <% } %>

                    <% }) %>
                </section>
            </div>
        </div>
    <% } %>
</div>
